<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            android:src="@mipmap/title" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="30dp"
            android:text="@string/phone_loca"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@color/title_txt_color"
        android:text="手机号码查询"/>
    <EditText
        android:id="@+id/input_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:hint="请输入手机号码查询"
        android:textColorHighlight="@color/hint_color"/>
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:background="@color/button_background_color"
        android:textColor="#AD0C0C"
        android:textSize="20dp"
        android:text="查询" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/search_title_color"
        android:text="查询结果"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">
      <TextView
          android:id="@+id/result_phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:paddingLeft="40dp"
          android:paddingTop="20dp"
          android:paddingBottom="15dp"
          android:textColor="@android:color/black"
          android:text="手机号码:xxx        "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_background"/>
        <TextView
            android:id="@+id/result_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/black"
            android:text="省份:xxx        "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_background"/>
        <TextView
            android:id="@+id/result_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/black"
            android:text="运营商:xxx        "/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_background"/>
        <TextView
            android:id="@+id/result_carrier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="15dp"
            android:textColor="@android:color/black"
            android:text="归属运营商:xxx        "/>
    </LinearLayout>

</LinearLayout>